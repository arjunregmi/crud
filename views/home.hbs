<div class="container mt-3">

    {{#if success_msg}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        {{success_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}




    <center class="mb-5">
        <h1>Our Students Information</h1>
    </center>

    <div class="row">
        {{#each posts}}
        <div class="col-md-6">

            <div class="py-4 mb-5 pl-3 card shadow-lg ml-5">
                <center>
                    <h4 class="mr-5">{{firstname}} {{middlename}} {{lastname}}</h4>
                </center>

                <div class="row ml-5 ">
                    <div class="col-md-12">
                        <img src="/uploads/{{image}}" class="img img-size rounded pr-3">
                    </div>
                    <div class="col-md-12 ml-5">

                        <label>
                            {{firstname}} {{middlename}} {{lastname}}
                        </label>
                        <br>
                        <label>
                            {{email}}
                        </label>
                        <br>

                        <label>
                            {{address}}
                        </label>
                        <br>
                        <button class="btn btn-outline-info"><a href="studentDetails/{{id}}">Show More</a></button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>


</div>
</div>